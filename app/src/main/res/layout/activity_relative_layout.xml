<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayoutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:gravity="center"
            android:ignoreGravity="@id/relative_ignore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="14dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/relative_ignore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="根据父组件定位"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="接受 gravity" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ccc">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="根据兄弟view定位"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/relative_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="向我看齐"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="左护法"
                android:layout_toLeftOf="@+id/relative_center"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="右护法"
                android:layout_toRightOf="@+id/relative_center"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="上护法"
                android:layout_above="@id/relative_center"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff000"
                android:text="下护法"
                android:layout_below="@id/relative_center"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>