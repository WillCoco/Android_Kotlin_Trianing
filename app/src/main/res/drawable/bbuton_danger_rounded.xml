<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
        <solid android:color="#D65DB1" />
        <stroke android:width="1dp" android:color="#D65DB1" />
        <corners android:radius="4dp"/>
    </shape></item>


    <item android:state_enabled="false"><shape>
        <solid android:color="#FF9671" />
        <stroke android:width="1dp" android:color="#FF9671" />
        <corners android:radius="4dp"/>
    </shape></item>


    <item><shape>
        <solid android:color="#0081CF" />
        <stroke android:width="1dp" android:color="#0081CF" />
        <corners android:radius="4dp"/>
    </shape></item>

</selector>